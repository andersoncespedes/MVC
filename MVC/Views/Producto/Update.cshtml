@model UpdateListDto

<div>
    <div class="main-form">
    <div class="cont-form card  rounded-3">
        <div class="card-header text-center p-3">
            <h2>Guardar Producto</h2>
            <hr>
        </div>
        <div class="card-body p-5">
            @using (@Html.BeginForm("Save", "Producto", FormMethod.Post, new { @id = "form", @class = "row form" }))
            {
                <div class="form-group col-md-6">
                    <label for="Nombre">Nombre</label>
                    <input type="text" name="Nombre" class="form-control" placeholder="Nombre" value="@Model.Producto.Nombre"> 
                </div>
                <div class="form-group col-md-6">
                    <label for="Cantidad">Cantidad</label>
                    <input type="number" name="Cantidad" class="form-control" placeholder="Cantidad" value="@Model.Producto.Cantidad">
                </div>
                <div class="form-group col-md-6">
                    <label for="Precio">Precio</label>
                    <input type="number" name="Precio" class="form-control" placeholder="Precio" value="@Model.Producto.Precio">
                </div>
                <div class="form-group col-md-6">
                    <label for="IdTipoFk">Tipo de Produto</label>
                    @Html.DropDownList("IdTipoFk", new SelectList(Model.Tipos, "Id", "Nombre", Model.Producto.IdTipoFk), "--- Selecccione ---", new
                        {
                            @class = "form-control",
                            @id = "Selecc",
                        })
                </div>
                    <input type="submit" class="btn btn-success" value="Guardar">
            }
        </div>

    </div>

</div>
</div>